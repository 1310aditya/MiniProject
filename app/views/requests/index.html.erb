<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Requester</th>
      <th>P location</th>
      <th>P time</th>
      <th>D location</th>
      <th>Status</th>
      <th>R time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.requester_id %></td>
        <td><%= request.p_location %></td>
        <td><%= request.p_time %></td>
        <td><%= request.d_location %></td>
        <td><%= request.status %></td>
        <td><%= request.r_time %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

